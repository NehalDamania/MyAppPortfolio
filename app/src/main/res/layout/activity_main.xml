<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="My Nanodegree Apps!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="40dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/spotifyStreamerButton"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:onClick="spotifyStreamerClickHandler"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/scoresAppButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spotifyStreamerButton"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:onClick="scoresAppClickHandler"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/libraryAppButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/scoresAppButton"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:onClick="libraryAppClickHandler" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/buildItBiggerButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/libraryAppButton"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:onClick="buildItBiggerAppClickHandler" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/xyzReaderButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buildItBiggerButton"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:onClick="xyzReaderClickHandler" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/capStoneButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/xyzReaderButton"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:onClick="capstoneClickHandler"/>


</RelativeLayout>
